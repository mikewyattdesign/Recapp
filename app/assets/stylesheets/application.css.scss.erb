@import "bootstrap";
@import "bootstrap3-datetimepicker/build/css/bootstrap-datetimepicker";
@import "tags";
@import "jquery-tokeninput/styles/token-input-facebook";

@import url("http://hello.myfonts.net/count/29ce32");

// Colors
$lightGrey: #f8f8f8;
$lightMediumGrey: #e6e6e6;

$lightest-orange: #ffcb9f;
$light-orange: #fcb171;
$orange: #fc9f4c;
$dark-orange: #ff8d28;

$lightest-grey: #e4e4e5;
$light-grey: #c3c2c3;
$grey: #8b8a8f;
$dark-grey: #58585a;
$darkest-grey: #404041;

// Fonts
@font-face {
    font-family: 'TrendSansOne';
    src: url(<%= asset_path '29CE32_6_0.eot' %>);
    src: url(<%= asset_path '29CE32_6_0.woff' %>) format('woff'),
         url(<%= asset_path '29CE32_6_0.ttf' %>) format('truetype');
 }

@font-face {
    font-family: 'TrendSlabOne';
    src: url(<%= asset_path '29CE32_10_0.eot' %>);
    src: url(<%= asset_path '29CE32_10_0.woff' %>) format('woff'),
         url(<%= asset_path '29CE32_10_0.ttf' %>) format('truetype');
 }

// Navigation Bar
.navbar-brand {
    margin-left: 50px;
}

.navbar .navbar-nav {
  display: inline-block;
  float: none;
}

.navbar {
    background-color: $dark-grey;
    border-color: $darkest-grey;
    border-radius: 0;
    background-image: url(<%= asset_path 'group360-logo.png' %>);
    background-repeat: no-repeat;
    background-size: 40px;
    background-position: 20px 5px;
}

.navbar-header {
    a {
        color: $orange !important;
        font-family: TrendSansOne, sans-serif;
    }
}

.nav {
    margin: 0;

    li {
        background-color: $dark-grey;

        &:hover {
            background-color: $orange;
        }

        &:active {
            background-color: $orange;
        }

        a {
            color: white !important;
            font-family: TrendSansOne, sans-serif;
        }
    }

    .client-login {
        color: $orange !important;

        &:hover {
            color: white !important;
        }
    }
}

// Global
.container-full {
    width: 100%;
}

.btn-primary {
    background-color: $orange;
    border-color: $light-orange;

    &:hover {
        background-color: $dark-orange;
        border-color: $orange;
    }
}

table {
    th {
        background-color: $lightGrey;
    }
}

body {
    background-color: $lightest-grey;
}

// Events Style

.event-header {
    padding-bottom: 4%;
    background-color: $dark-grey;
    border-bottom: 1px solid $darkest-grey;
    color: white;
    padding: 10px 20px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    font-family: TrendSansOne, sans-serif;

    h1 {
        margin: 0;
        font-size: 30px;
    }
}

.event-group {
    .row:first-child .event-timeline {
        top: 50%;
    }
    .row:last-child .event-timeline {
        bottom: 50%;
    }
}

.container-box {
    background-color: white;
    padding: 0;
    margin-bottom: 20px;
    -webkit-box-shadow: 0px 3px 10px $grey;
    -moz-box-shadow: 0px 3px 10px $grey;
    box-shadow: 0px 3px 10px $grey;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}

.event-name {
    font-size: 26px;
    font-weight: bold;
    color: $dark-grey;
}

.event-logo {
    height: 65px;
    margin-right: 20px;
    padding: 5px;
    border-radius: 5px;
}

.event-img {
    margin: 10px 0;
    width: 100%;
    border: 2px solid $dark-grey;
    border-radius: 5px;
}

.event-bar {
    padding: 5px 20px;
    font-size: 18px;
    width: 100%;
    background-color: $lightGrey;
    border-bottom: 1px solid #e1e1e1;
}

.event-info {
    padding: 10px 20px;
    margin-top: 15px;
    margin-bottom: 15px;
    border-bottom: 1px solid $light-grey;
    border-left: 5px solid $light-grey;
    border-right: 1px solid $light-grey;
    border-top: 1px solid $light-grey;
    position: relative;
    -webkit-box-shadow: 0px 0px 10px $light-grey;
    -moz-box-shadow: 0px 0px 10px $light-grey;
    box-shadow: 0px 0px 10px $light-grey;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;

    &:hover {
        background-color: $lightGrey;
        -webkit-box-shadow: 0px 0px 15px #b6b6b6;
        -moz-box-shadow: 0px 0px 15px #b6b6b6;
        box-shadow: 0px 0px 15px #b6b6b6;
    }

    .active {
        background-color: $lightGrey;
        border-left: 5px solid #7f7f7f;
    }
}

.event-circle {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background: $lightest-orange;
    border: 3px solid $light-grey;
    position: absolute;
    top: 50%;
    margin-top: -15px;
    left: -10%;
    z-index: 5
}

.event-timeline {
    width: 3px;
    background-color: $light-grey;
    top: -15%;
    bottom: -15%;
    position: absolute;
    left: -10%;
    margin-left: 13px;
    z-index: 4;
}

.event-arrow {
    width: 0;
    height: 0;
    border-top: 50px solid transparent;
    border-bottom: 50px solid transparent;
    border-right:15px solid $light-grey;

    position: absolute;
    top: 50%;
    margin-top: -50px;
    left: -2.2%;
    z-index: 4;
}

.info-button {
    width: 100%;
    margin-top: 2px;
    margin-bottom: 2px;
}

.event-info-text {
    padding-left: 0;
}

.event-info-button {
    padding-right: 0;
}

.no-event-photos {
    display: block;
    clear: both;
    text-align: center;
    padding: 5%;
    margin: 5% 0;
    border-radius: 5px;
    border: 2px dotted;
    font-family: TrendSansOne, sans-serif;
    &:hover {
        background-color: white;
        border: 2px dotted $orange;
        color: $orange;
    }
}

.photo {
    @extend .event-info;
}

.event-details {
    @extend .clearfix;

    .quick-info {
        clear: left;
        margin-top: 10px;
    }
}

.form-header-label {
    border-bottom: 1px solid $lightMediumGrey;
    margin-bottom: 10px;
    h3 {
        margin: 10px 0 5px 0;
    }
}

.counter {
    font-weight: bold;
    font-size: 16px;
}

.form-box {
    padding: 30px;
}

.control-label {
    text-align: left !important;
}

.form-control {
    height: 40px;
}

.form-row, .form-cont-box {
    margin-bottom: 10px;
}

.checkbox {
    padding-top: 0 !important;
}

.submit-container {
    margin-top: 20px;
}

.back-button, .btn-right-space {
    margin-right: 20px;
}

#brand_logo {
    opacity: 0;
    position: absolute;
}

.input-button {
    z-index: -1;
}

.event-logo {
    border: 1px solid $lightMediumGrey;
    -webkit-box-shadow: 0px 0px 10px $lightMediumGrey;
    -moz-box-shadow: 0px 0px 10px $lightMediumGrey;
    box-shadow: 0px 0px 10px $lightMediumGrey;
}

.brand-icon-container, .event-giveaway-container,.comments-container {
    padding: 15px;
    margin-bottom: 30px;
    border: 1px solid $lightMediumGrey;
    -webkit-box-shadow: 0px 0px 10px $lightMediumGrey;
    -moz-box-shadow: 0px 0px 10px $lightMediumGrey;
    box-shadow: 0px 0px 10px $lightMediumGrey;

    &:hover {
        background-color: $lightGrey;
        -webkit-box-shadow: 0px 0px 15px #b6b6b6;
        -moz-box-shadow: 0px 0px 15px #b6b6b6;
        box-shadow: 0px 0px 15px #b6b6b6;
        border-left: 1px solid #e1e1e1;
    }
}

.comments-container, .event-giveaway-container {
    border-radius: 10px;
    border: 2px solid $lightMediumGrey;
    margin-bottom: 15px;
}

.brand-icon {
    height: 250px;
    background-color: $lightGrey;
}

.prize-icon {
    height: 150px;
    background-color: $lightGrey;
}

.event-giveaway-icon {
    height: 70px;
    background-color: $lightGrey;
    text-align: center;
}

.brand-name {
    font-size: 20px;
    font-weight: bold;
    text-align: center;
}

.event-giveaway-name {
    height: 70px;
}

.comments {
    font-size: 18px;
}

.giveaway-image {
    height: 100%;
}