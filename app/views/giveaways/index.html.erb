<h1>Listing giveaways</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @giveaways.each do |giveaway| %>
      <tr>
        <td><%= giveaway.name %></td>
        <td><%= link_to 'Edit', edit_giveaway_path(giveaway), class: 'btn btn-default' %></td>
        <td><%= link_to 'Delete', giveaway, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Giveaway', new_giveaway_path, class: 'btn btn-primary' %>
