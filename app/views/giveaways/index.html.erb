<div class="row">
    <div class="col-md-10 col-md-offset-1 container-box">
        <div class="event-header">
            <h1><span class="glyphicon glyphicon-gift"></span> Giveaway
                <%= link_to new_giveaway_path do %>
                <% if can? :create, Giveaway %>
                  <button type="button" class="pull-right new-event-btn btn btn-primary"><span class="visible-md visible-lg visible-sm .hidden-xs">New Giveaways</span><span class=".hidden-md .hidden-lg .hidden-sm visible-xs">+</span></button>
                <% end %>
                <% end %>
            </h1>
        </div>

        <div class="form-box">

            <div class="row">
            <% @giveaways.each do |giveaway| %>
                <div class="col-sm-6 col-md-4">
                    <div class="card-stack card-round event-giveaway-container col-md-12">
                        <div class="event-giveaway-name col-md-12">
                            <%= giveaway.name %> (<%= giveaway.is_a_sample ? 'Sample' : 'Premium' %>)
                            <!-- <table class="table">
                                <tr>
                                  <th></th>
                                </tr>
                            </table> -->
                        </div>
                        <div  class="edit-circle">
                            <%= link_to edit_giveaway_path(giveaway) do %>
                            <button type="button"><span class="glyphicon glyphicon glyphicon-pencil"></span></button>
                            <% end %>
                        </div>
                        <% if can? :delete, giveaway %>
                            <div class="delete-circle">
                               <%= link_to giveaway, method: :delete, data: { confirm: 'Are you sure?' } do %>
                                <button type="button"><span class="glyphicon glyphicon-trash"></span></button>
                                <% end %>
                            </div>
                        <% end %>
                    </div>
                </div>
            <% end %>
            </div>

        </div>
    </div>
</div>