<div class="row">
    <div class="col-md-10 col-md-offset-1 container-box">
        <div class="event-header">
            <h1><span class="glyphicon glyphicon-gift"></span> Giveaway
                <%= link_to new_giveaway_path do %>
                <button type="button" class="pull-right new-event-btn btn btn-primary"><span class="visible-md visible-lg visible-sm .hidden-xs">New Giveaways</span><span class=".hidden-md .hidden-lg .hidden-sm visible-xs">+</span></button>
                <% end %>
            </h1>
        </div>

        <div class="form-box">

            <div class="row">
            <% @giveaways.each do |giveaway| %>
              <div class="col-md-10 col-md-offset-1">
                <div class="event-giveaway-container row">
                    <div class="event-giveaway-icon col-md-2">
                        <%= link_to image_tag giveaway.image, class: "giveaway-image" %>
                    </div>
                    <div class="event-giveaway-name col-md-8">
                        <table class="table">
                            <tr>
                              <th>Giveaway</th>
                            </tr>
                            <tr>
                              <td><%= giveaway.name %></td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-md-2">
                        <div>
                            <%= link_to edit_giveaway_path(giveaway) do %>
                            <button type="button" class="btn btn-default info-button"><span class="glyphicon glyphicon glyphicon-pencil"></span></button>
                            <% end %>
                        </div>
                        <div>
                           <%= link_to giveaway, method: :delete, data: { confirm: 'Are you sure?' } do %>
                            <button type="button" class="btn btn-default info-button"><span class="glyphicon glyphicon glyphicon-trash"></span></button>
                            <% end %>
                        </div>
                    </div>
                </div>
              </div>
            <% end %>
            </div>

        </div>
    </div>
</div>