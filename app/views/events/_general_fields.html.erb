<div class="general-info">
    <div class="form-group">
        <div class="col-sm-12 col-md-12">
            <%= f.text_field :name, class: "form-control input-lg", placeholder: "Event name" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12 col-md-12">
            <%= f.select :program_id, options_from_collection_for_select(Program.all, :id, :program_plus_brand),{} ,class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :start_date, "Start Date", class: "control-label col-md-2" %>
        <div class="col-md-10">
            <%= f.text_field :start_date, class: "form-control", placeholder: "Start time", data: {behavior: "datepicker"} %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :start_time, "Start Time", class: "control-label col-md-2" %>
        <div class="col-md-10">
            <%= f.text_field :start_time, class: "form-control", placeholder: "Start time", data: {behavior: "timepicker"} %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :end_date, "End Date", class: "control-label col-md-2" %>
        <div class="col-md-10">
            <%= f.text_field :end_date, class: "form-control", placeholder: "End time", data: {behavior: "datepicker"} %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :end_time, "End Time", class: "control-label col-md-2" %>
        <div class="col-md-10">
            <%= f.text_field :end_time, class: "form-control", placeholder: "End time", data: {behavior: "timepicker"} %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :location_id, "Location", class: "control-label col-md-2" %>
        <div class="col-md-10">
            <%= f.select :location_id, options_from_collection_for_select(Location.all, :id, :name),{} ,class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <%= f.text_area :note, class: "form-control", placeholder: "Event notes" %>
        </div>
    </div>
</div>
