<div class="event-details collapse">
    <%= event_decorator.photo %>
    <ul class="list-inline quick-info">
      <% if can? :read, Event %>
        <li class="col-xs-12 col-sm-3 col-md-3 col-lg-2"><%= link_to "/events/#{event.id}/edit#impression-jump" do %><button class="btn btn-default col-xs-12"><div class="counter"><%= number_to_abbreviated event.estimated_total_impressions %></div>Impressions</button><% end %></li>

        <li class="col-xs-12 col-sm-3 col-md-3 col-lg-2">
            <%= link_to event_event_giveaways_path(event), remote: true do %><button type="button" class="btn btn-default col-xs-12 event-dropdown-btn"><div class="counter"><%= event.giveaways.length %></div>Giveaways</button><% end %>

            <% if can? :update, @giveaways %>
            <div class="giveaway-add">
                <%= link_to new_event_event_giveaway_path(event) do %>
                <div class="event-dropdown-add-btn"><span class="glyphicon glyphicon-plus-sign"></span></div><% end %>
            </div>
            <% end %>
        </li>
        <li class="col-xs-12 col-sm-3 col-md-3 col-lg-2">
            <%= link_to event_comments_path(event), remote: true do %><button type="button" class="btn btn-default col-xs-12 event-dropdown-btn"><div class="counter"><%= event.comments.length %></div>Comments</button><% end %>

            <% if can? :update, @comments %>
            <div class="comment-add">
                <%= link_to new_event_comment_path(event) do %>
                <div class="event-dropdown-add-btn"><span class="glyphicon glyphicon-plus-sign"></span></div><% end %>
            </div>
            <% end %>
        </li>
      <% end %>
    </ul>

    <div class='event-dropdown-container'></div>

    <% if event.tags.present? %>
	    <ul class="token-input-list-facebook token-list-display">
	    	<% event.tags.each do |tag| %>
		    	<li class="token-input-token-facebook">
		    		<p><%= tag.name %></p>
		    	</li>
	    	<% end %>
	    </ul>
    <% end %>
</div>