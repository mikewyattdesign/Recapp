<%= form_for @event,html: {class: "form-horizontal"} do |f| %>
    <% if @event.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
            <ul>
                <% @event.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <%= render 'general_fields', f: f %>
    <% if @details %>
        <div class="detail<%= " hidden" unless @details %>">

            <%= render 'impression_fields', f: f %>
            <%= render 'stella_fields', f: f if @event.program.brand.name == 'Stella Artois' %>
            <%= render 'giveaways_fields', f: f %>
            <%= render 'photos_fields', f: f %>

        </div>
    <% end %>

    <div class="row">
        <div class="col-md-12 form-header-label"></div>
        <div class="col-md-12 submit-container">
            <%= f.submit class: "btn btn-primary pull-right" %>
            <%= link_to 'Back', events_path, class: "btn btn-default pull-right back-button" %>
        </div>
    </div>
<% end %>
