<%= form_for(@photo, html: {class: "form-horizontal"}) do |f| %>
  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% @photo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group row">
    <div class="col-md-12">
        <%= f.file_field :image, class: "control-label container-full" %>
        <div class="input-button btn btn-default container-full">Choose File</div>
        <%= f.label :tag_list, "Tags (separated by commas)", class: "control-label" %>
        <%= f.text_field :tag_list, data: {tag_list: "", pre: @photo.tags}, class: "form-control" %>
        <%= f.hidden_field :imageable_id, value: @event.id %>
        <%= f.hidden_field :imageable_type, value: @event.class.name %>
    </div>

    <div class="col-md-12 form-header-label"></div>
    <div class="col-md-12 submit-container">
        <%= f.submit class: "btn btn-primary pull-right" %>
        <%= link_to 'Back', event_photos_path(@event), class: 'btn btn-default pull-right back-button' %>
    </div>
</div>
<% end %>
