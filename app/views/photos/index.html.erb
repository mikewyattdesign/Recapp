<div class="row">
    <div class="col-md-10 col-md-offset-1 container-box">
        <div class="event-header">
            <h1><span class="glyphicon glyphicon-camera"></span> Photos</h1>
        </div>

        <div class="form-box">
          <% if @tags.present? %>
            <% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
              <%= link_to tag.name, "/photos/tags/#{tag.name}", class: css_class %>
            <% end %>
          <% end %>
          <div class="row">
            <% @photos.each do |photo| %>
              <div class="col-sm-6 col-md-4">
                <div class="photo">
                  <div class="list-photo-container"><%= image_tag photo.image, class: 'img-responsive list-photos' %></div>
                  <ul class="tag-list">
                    <% photo.tags.each do |tag| %>
                      <li><%= link_to tag, "/photos/tags/#{tag}" %></li>
                    <% end %>
                  </ul>
                  <div>
                    <%= link_to edit_photo_path(photo) do %>
                      <button type="button" class="btn btn-default info-button"><span class="glyphicon glyphicon glyphicon-pencil"></span> Edit</button>
                    <% end %>
                  </div>
                  <div>
                    <%= link_to photo, method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <button type="button" class="btn btn-default info-button"><span class="glyphicon glyphicon glyphicon-trash"></span> Delete</button>
                      <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

        <br>
        <% if @event.present? %>
          <%= link_to "Back to #{@event.name}", edit_event_path(@event), class: 'btn btn-default back-button' %>
          <%= link_to 'New Photo', new_event_photo_path, class: "btn btn-primary" %>
        <% end %>
        </div>
    </div>
</div>