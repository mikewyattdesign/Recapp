<div class="row">
    <div class="col-md-10 col-md-offset-1 container-box">
        <div class="event-header">
            <h1><span class="glyphicon glyphicon-th-large"></span> Brands
            <% if can? :create, Brand %>
                <%= link_to new_brand_path, class: 'pull-right new-event-btn btn btn-primary' do %>
                <span class="visible-md visible-lg visible-sm .hidden-xs">New Brand</span><span class=".hidden-md .hidden-lg .hidden-sm visible-xs">+</span>
                <% end %>
            <% end %>
            </h1>
        </div>

        <div class="form-box">

            <div class="row">
            <% @brands.each do |brand| %>
              <div class="col-sm-6 col-md-4">
                <div class="card-stack brand-icon-container">
                <div class="brand-icon">
                    <%= image_tag brand.logo(:medium), class: "img-responsive brand-logos" unless brand.logo.nil? %>
                </div>
                <div class="brand-name">
                    <%= brand.name %>
                </div>
                <div>
                    <%= link_to brand_programs_path(brand), class: "btn btn-primary info-button" do %>
                    <span class="glyphicon glyphicon-list-alt"></span> Programs
                    <% end %>
                </div>
                <div>
                    <%= link_to brand_photos_path(brand), class: "btn btn-default info-button" do %>
                    <span class="glyphicon glyphicon-camera"></span> Photos
                    <% end %>
                </div>
                <% if can? :update, brand %>
                    <div class="edit-box">
                        <%= link_to edit_brand_path(brand) do %>
                        <button type="button" class=""><span class="glyphicon glyphicon glyphicon-pencil"> Edit</span></button>
                        <% end %>
                    </div>
                <% end %>
                <% if can? :destroy, brand %>
                    <div class="delete-box">
                        <%= link_to brand, method: :delete, data: { confirm: 'Are you sure?' } do %>
                            <button type="button" class=""><span class="glyphicon glyphicon-remove-circle"></span></button>
                        <% end %>
                    </div>
                <% end %>
                </div>
              </div>
            <% end %>
            </div>

        </div>
    </div>
</div>