<div class="row">
    <div class="col-md-10 col-md-offset-1 container-box">
        <div class="event-header">
            <h1>Brands
                <%= link_to new_brand_path do %>
                <button type="button" class="pull-right new-event-btn btn btn-default">New Brand</button>
                <% end %>
            </h1>
        </div>

        <div class="form-box">

            <div class="row">
            <% @brands.each do |brand| %>
              <div class="col-md-4">
                <div class="brand-icon-container">
                <div class="brand-icon">
                    <%= image_tag brand.logo, class: "img-responsive brand-logos" unless brand.logo.nil? %>
                </div>
                <div class="brand-name">
                    <%= brand.name %>
                </div>
                <div>
                    <%= link_to brand_programs_path(brand) do %>
                    <button type="button" class="btn btn-primary info-button"> <span class="glyphicon glyphicon-eye-open"></span> Programs</button>
                    <% end %>
                </div>
                <div>
                    <%= link_to edit_brand_path(brand) do %>
                    <button type="button" class="btn btn-default info-button"><span class="glyphicon glyphicon glyphicon-pencil"></span> Edit</button>
                    <% end %>
                </div>
                <div>
                    <%= link_to brand, method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <button type="button" class="btn btn-default info-button"><span class="glyphicon glyphicon glyphicon-trash"></span> Delete</button>
                    <% end %>
                </div>
                </div>
              </div>
            <% end %>
            </div>

        </div>
    </div>
</div>