<%= form_for(@brand, html: {class: "form-horizontal"}) do |f| %>
<% if @brand.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@brand.errors.count, "error") %> prohibited this brand from being saved:</h2>

	<ul>
		<% @brand.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="brand-info">
	<div class="form-group">
		<%= f.label :name, "Name", class: "control-label col-md-12" %>
		<div class="col-md-12">
			<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :logo, "Logo", class: "control-label col-md-12" %>
		<div class="col-md-12">
            <div class="input-button-container">
                <div class="input-button btn btn-default">Choose File</div>
                <%= f.file_field :logo, class: "btn btn-default", style: "width:200px" %>
            </div>
		</div>
	</div>
</div>

	<%= f.submit class: "btn btn-primary"%>

<% end %>
