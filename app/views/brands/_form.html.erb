	<ul>
			<% @brand.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
	</ul>
</div>
<% end %>
<div class="brand-info">
	<div class="form-group">
		<%= f.label :name, "Name", class: "control-label col-md-2" %>
		<div class="col-md-10">
			<%= f.text_field :name %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :logo, "Logo", class: "control-label col-md-2" %>
		<div class="col-md-10">
			<%= f.file_field :logo %>
		</div>
	</div>
</div>
<div class="actions col-md-offset-2">
		<%= f.submit class: "btn btn-primary"%>
</div>
<% end %>
