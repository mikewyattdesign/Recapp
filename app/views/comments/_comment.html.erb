<div class="col-md-12 event-dropdown">
    <div class="col-md-1 event-dropdown-text">
        <span class="glyphicon glyphicon-comment"></span>
    </div>
    <div class="col-md-9 comment-dropdown-content">
       <%= comment.content %>
    </div>

    <div class="edit-box-dropdown">
        <%= link_to edit_comment_path(comment) do %>
        <button type="button"><span class="glyphicon glyphicon glyphicon-pencil"></span></button>
        <% end %>
    </div>

    <div class="delete-box-dropdown">
        <%= link_to comment, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <button type="button"><span class="glyphicon glyphicon-remove-circle"></span></button>
        <% end %>
    </div>

</div>
