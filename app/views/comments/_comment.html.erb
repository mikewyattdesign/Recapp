 <div class="col-md-10 col-md-offset-1">
    <div class="card-stack card-round comments-container row">
        <div class="col-md-10 col-md-offset-1">
            <div class="comments">
                <%= comment.content %>
            </div>
        </div>
        <div class="edit-box">
            <%= link_to edit_comment_path(comment) do %>
            <button type="button"><span class="glyphicon glyphicon glyphicon-pencil"> Edit</span></button>
            <% end %>
        </div>
        <div class="delete-box">
            <%= link_to comment, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <button type="button"><span class="glyphicon glyphicon-remove-circle"></span></button>
            <% end %>
        </div>
    </div>
  </div>