<%= form_for [@event,@comment], html: {class: "form-horizontal"} do |f| %>
    <% if @comment.errors.any? %>
        <div id="error_explanation">
                <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

            <ul>
                <% @comment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="row">
        <div class="comment-questions">
            <div class="col-md-10 col-md-offset-1 form-cont-box">
                <%= f.label :content, "Content", class: "control-label" %>
                <%= f.text_area :content, class: "form-control" %>
            </div>
            <div class="col-md-10 col-md-offset-1 form-cont-box">
                <%= f.label :is_testimonial, "Testimonial", class: "control-label" %>
                <%= f.check_box :is_testimonial %>
            </div>
        </div>

        <div class="col-md-10 col-md-offset-1 form-header-label"></div>
        <div class="col-md-10 col-md-offset-1 submit-container">
            <%= f.submit class: "btn btn-primary pull-right" %>
            <%= link_to 'Back', event_comments_path(@comment.event.id), class: "btn btn-default pull-right back-button" %>
        </div>
    </div>

<% end %>
