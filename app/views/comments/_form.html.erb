<%= form_for [@event,@comment], html: {class: "form-horizontal"} do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="comment-questions">
      <div class="form-group">
        <%= f.label :content, "Content", class: "control-label col-md-12" %>
        <div class="col-md-12">
          <%= f.text_area :content, class: "form-control" %>
        </div>
      </div>
      <div class="checkbox">
        <%= f.label :is_testimonial, "Testimonial", class: "control-label" %>
          <%= f.check_box :is_testimonial %>
      </div>
  </div>


    <div class="col-md-12 form-header-label"></div>
    <div class="col-md-12 submit-container">
        <div class="form-group">
            <div class="actions">
                <%= f.submit class: "btn btn-primary pull-right" %>
                <%= link_to 'Back', event_comments_path(@event), class: "btn btn-default pull-right back-button" %>
            </div>
        </div>
    </div>


<% end %>
