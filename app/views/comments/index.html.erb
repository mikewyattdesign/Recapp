<div class="row">
    <div class="col-md-10 col-md-offset-1 container-box">
        <div class="event-header">
            <h1>Comments</h1>
        </div>

        <div class="form-box">

            <div class="row">
                <% @comments.each do |comment| %>
                  <div class="col-md-10 col-md-offset-1">
                    <div class="card-stack card-round comments-container row">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="comments">
                                <%= comment.content %>
                            </div>
                        </div>
                        <div class="edit-box">
                            <%= link_to edit_comment_path(comment) do %>
                            <button type="button"><span class="glyphicon glyphicon glyphicon-pencil"> Edit</span></button>
                            <% end %>
                        </div>
                        <div class="delete-box">
                            <%= link_to comment, method: :delete, data: { confirm: 'Are you sure?' } do %>
                            <button type="button"><span class="glyphicon glyphicon-remove-circle"></span></button>
                            <% end %>
                        </div>
                    </div>
                  </div>
                <% end %>

                <div class="col-md-10 col-md-offset-1 form-header-label"></div>
                <% if @commentable.present? %>
                <div class="col-md-10 col-md-offset-1 submit-container">
                    <%= link_to 'New Comment', [:new, @commentable, :comment], class: "btn btn-primary pull-right" %>
                    <%= link_to_unless @commentable.nil?, 'Back', event_path(@commentable), class: "btn btn-default pull-right back-button" %>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

