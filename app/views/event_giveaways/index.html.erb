<div class="row">
    <div class="col-md-10 col-md-offset-1 container-box">
        <div class="event-header">
            <h1><span class="glyphicon glyphicon-gift"></span> Event Giveaways <%= "for #{@event.name}" if @event.present? %> </h1>
        </div>

        <div class="form-box">

            <div class="row">
                <% @event_giveaways.each do |event_giveaway| %>
                  <div class="col-md-10 col-md-offset-1">
                    <div class="card-stack card-round event-giveaway-container row">
                        <div class="event-giveaway-icon col-md-2">
                            <!-- Prize Picture -->
                        </div>
                        <div class="event-giveaway-name col-md-8">
                            <table class="table">
                                <tr>
                                  <th>Event</th>
                                  <th>Giveaway</th>
                                  <th>Amount</th>
                                </tr>
                                <tr>
                                  <td><%= event_giveaway.event.name %></td>
                                  <td><%= event_giveaway.giveaway.name %></td>
                                  <td><%= event_giveaway.count_given_away %></td>
                                </tr>
                            </table>
                        </div>

                        <div class="col-md-2">
                            <div>
                                <%= link_to edit_event_giveaway_path(event_giveaway) do %>
                                <button type="button" class="btn btn-default info-button"><span class="glyphicon glyphicon glyphicon-pencil"></span></button>
                                <% end %>
                            </div>
                            <div>
                                <%= link_to event_giveaway, method: :delete, data: { confirm: 'Are you sure?' } do %>
                                <button type="button" class="btn btn-default info-button"><span class="glyphicon glyphicon glyphicon-trash"></span></button>
                                <% end %>
                            </div>
                        </div>
                    </div>
                  </div>
                <% end %>

                <div class="col-md-12 form-header-label"></div>
                <div class="col-md-10 col-md-offset-1 submit-container">
                    <% unless @event.nil? %>
                    <%= link_to new_event_event_giveaway_path(@event), class: "btn btn-primary pull-right" do %><span class="glyphicon glyphicon-plus"></span> &nbsp;New Giveaway<% end %>

                    <%= link_to edit_event_path(@event), class: "btn btn-default pull-right back-button" do %><span class="glyphicon glyphicon-pencil"></span> &nbsp;Edit Event<% end %>
                    <% end %>
                </div>
            </div>

        </div>
    </div>
</div>