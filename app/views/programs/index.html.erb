<div class="row">
    <div class="col-md-10 col-md-offset-1 container-box">
        <div class="event-header">
            <h1><span class="glyphicon glyphicon-list-alt"></span> Programs for <%= @brand.name %>
                <% if can? :update, Program %>
                  <%= link_to new_brand_program_path, class: "pull-right btn btn-primary" do %><span class="visible-md visible-lg visible-sm .hidden-xs">New Program</span><span class=".hidden-md .hidden-lg .hidden-sm visible-xs">+</span>
                  <% end %>
                <% end %>
            </h1>
        </div>

        <div class="form-box">
            <div class="row">
            <% @programs.each do |program| %>
              <div class="col-md-4">
                <div class="card-stack brand-icon-container">
                <div class="prize-icon hidden">
                    <!-- Prize Picture -->
                </div>
                <div class="brand-name">
                    <%= link_to program.name, program_path(program) %>
                </div>
                <div>
                    <%= link_to program_events_path(program), class: "btn btn-primary info-button" do %>
                    <span class="glyphicon glyphicon-calendar"></span> Show Events
                    <% end %>
                </div>
                <div>
                    <%= link_to program_photos_path(program), class: "btn btn-default info-button" do %>
                    <span class="glyphicon glyphicon-camera"></span> Photos
                    <% end %>
                </div>
                <% if can? :update, program %>
                <div class="edit-circle">
                    <%= link_to edit_program_path(program) do %>
                    <button type="button"><span class="glyphicon glyphicon glyphicon-pencil"></span></button>
                    <% end %>
                </div>
                <% end %>
                <% if can? :destroy, program %>
                <div class="delete-circle">
                    <%= link_to program, method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <button type="button"><span class="glyphicon glyphicon-trash"></span></button>
                    <% end %>
                </div>
                <% end %>
                </div>
              </div>
            <% end %>
            </div>
<!--
            <div class="row">
                <div class="col-md-12 form-header-label"></div>
                <div class="col-md-12 submit-container">
                    <%= link_to_unless @brand.nil?, "Back", brands_path, class: "btn btn-default pull-right" %>
                </div>
            </div>
 -->
        </div>

    </div>
</div>
