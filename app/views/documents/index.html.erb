<div class="row">
    <div class="col-md-10 col-md-offset-1 container-box">
        <div class="event-header">
            <h1><span class="glyphicon glyphicon-file"></span> <%= @descriptor %> Documents
            <% if @event.present? %>
              <%= link_to new_event_document_path, id: 'new_document_link', remote: true do %>
                <button type="button" class="new-event-btn btn btn-primary pull-right"><span>New Document</span></button>
              <% end %>
            <% end %>
            </h1>
        </div>

        <div class="form-box">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                  <div class="event-dropdown document-contaner">
                    <table id="documents-table" class="table document-table">
                        <thead>
                            <tr>
                                <th>File Name</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        <%= render @documents %>
                        </tbody>
                    </table>
                  </div>
                </div>

                <br>
                <% if @event.present? %>
                    <div class="col-md-10 col-md-offset-1">
                        <%= link_to "Back to #{@event.name}", edit_event_path(@event), class: 'btn btn-default back-button' %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>