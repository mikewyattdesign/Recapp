<div class="row">
    <div class="col-md-10 col-md-offset-1 container-box">
        <div class="event-header">
            <h1><span class="glyphicon glyphicon-facetime-video"></span> Videos
                <%= link_to new_event_video_path do %>
                <button type="button" class="pull-right new-event-btn btn btn-primary"><span class="visible-md visible-lg visible-sm .hidden-xs">New Video</span><span class=".hidden-md .hidden-lg .hidden-sm visible-xs">+</span></button>
                <% end %>
            </h1>
        </div>

        <div class="form-box">
          <div class="row">
            <% @videos.each do |video| %>
              <div class="col-sm-6 col-md-4">
                <div class="photo">
                  <div class="list-photo-container"><%= image_tag video.media(:thumb), class: 'img-responsive list-photos' %></div>
                  <div>
                    <%= link_to video do %>
                      <button type="button" class="btn btn-default info-button"><span class="glyphicon glyphicon glyphicon-pencil"></span> Show</button>
                    <% end %>
                  </div>
                  <div>
                    <%= link_to edit_video_path(video) do %>
                      <button type="button" class="btn btn-default info-button"><span class="glyphicon glyphicon glyphicon-pencil"></span> Edit</button>
                    <% end %>
                  </div>
                  <div>
                    <%= link_to video, method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <button type="button" class="btn btn-default info-button"><span class="glyphicon glyphicon glyphicon-trash"></span> Delete</button>
                      <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
    </div>
</div>
