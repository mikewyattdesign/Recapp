<%= form_for [@contact], html: {class: "form-horizontal"} do |f| %>
    <% if @contact.errors.any? %>
        <div id="error_explanation">
                <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

            <ul>
                <% @contact.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="row">
        <div class="contact-questions">
            <!-- NAME -->
            <div class="col-md-5 col-md-offset-1 form-cont-box">
                <%= f.label :first_name, "First Name", class: "control-label" %>
                <%= f.text_field :first_name, class: "form-control", required: true %>
            </div>
            <div class="col-md-5 form-cont-box">
                <%= f.label :last_name, "Last Name", class: "control-label" %>
                <%= f.text_field :last_name, class: "form-control", required: true %>
            </div>

            <!-- TITLE -->
            <div class="col-md-10 col-md-offset-1">
                <%= f.label :title, "Title", class: "control-label" %>
                <%= f.text_field :title, class: "form-control" %>
            </div>

            <!-- ADDRESS -->
            <div class="col-md-10 col-md-offset-1 form-cont-box">
                <%= f.label :address, "Address", class: "control-label" %>
                <%= f.text_field :address, class: "form-control" %>
            </div>
            <div class="col-md-5 col-md-offset-1 form-cont-box">
                <%= f.label :city, "City", class: "control-label" %>
                <%= f.text_field :city, class: "form-control" %>
            </div>
            <div class="col-md-2 form-cont-box">
                <%= f.label :state, "State", class: "control-label" %>
                <%= f.text_field :state, class: "form-control" %>
            </div>
            <div class="col-md-3 form-cont-box">
                <%= f.label :zip, "Zip", class: "control-label" %>
                <%= f.text_field :zip, class: "form-control" %>
            </div>

            <!-- EMAIL -->
            <div class="col-md-10 col-md-offset-1">
                <%= f.label :email, "Email", class: "control-label" %>
                <%= f.email_field :email, class: "form-control" %>
            </div>

            <!-- PHONE -->
            <div class="col-md-5 col-md-offset-1 form-cont-box">
                <%= f.label :mobile_phone, "Mobile Phone", class: "control-label" %>
                <!-- <span class="help-block">Please use the 'xxx xxx xxxx' format</span> -->
                <%= f.telephone_field :mobile_phone, class: "form-control" %>
            </div>
            <div class="col-md-5 form-cont-box">
                <%= f.label :desk_phone, "Desk Phone", class: "control-label" %>
                <!-- <span class="help-block">Please use the 'xxx xxx xxxx' format</span> -->
                <%= f.telephone_field :desk_phone, class: "form-control" %>
            </div>
        </div>

        <div class="col-md-10 col-md-offset-1 submit-container">
            <%= f.submit class: "btn btn-success pull-right" %>
<!--
            <%= link_to 'Back', [@contacts, :contacts], class: "btn btn-primary pull-right back-button" %>
 -->
        </div>
    </div>

<% end %>
