<div class="col-sm-6 col-md-6">
  <div class="contacts-container card-stack card-round col-xs-12 col-sm-12 col-md-12">
    <div class="name"><%= contact.first_name %> <%= contact.last_name %> <span class="brand-primary">|</span> <%= contact.title if contact.title.present? %></div>
    <div class="location"><%= contact.address %> <span class="brand-primary">|</span> <%= contact.city %>, <%= contact.state %> <%= contact.zip %></div>
    <div class="email"><%= contact.email if contact.email.present? %></div>
    <div class="phone">
        <% if contact.mobile_phone.present? %>
            <span class="brand-primary">M</span> <%= contact.mobile_phone %>
        <% end %>
        <% if contact.desk_phone.present? %>
            <span class="brand-primary">D</span> <%= contact.desk_phone %>
        <% end %>
    </div>
    <% if can? :update, contact %>
    <div class="edit-circle">
        <%= link_to edit_contact_path(contact) do %>
        <button type="button"><span class="glyphicon glyphicon glyphicon-pencil"></span></button>
        <% end %>
    </div>
    <% end %>
    <% if can? :destroy, contact %>
    <div class="delete-circle">
        <%= link_to contact, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <button type="button"><span class="glyphicon glyphicon-trash"></span></button>
        <% end %>
    </div>
    <% end %>
  </div>
</div>


