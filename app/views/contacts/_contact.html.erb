<div class="col-xs-12 col-sm-12 col-md-12 event-dropdown">
    <div class="col-xs-1 col-sm-1 col-md-1 event-dropdown-text">
        <span class="glyphicon glyphicon-user"></span>
    </div>
    <div class="col-xs-8 col-sm-8 col-md-9 contact-dropdown-content">
       <%= contact.first_name %>
       <%= contact.last_name %>
       <%= contact.title %>
       <%= contact.address %>
       <%= contact.city %>
       <%= contact.state %>
       <%= contact.zip %>
       <%= contact.email %>
       <%= contact.mobile_phone %>
       <%= contact.desk_phone %>
    </div>

    <div class="edit-box-dropdown">
        <%= link_to edit_contact_path(contact) do %>
        <button type="button"><span class="glyphicon glyphicon glyphicon-pencil"></span></button>
        <% end %>
    </div>

    <div class="delete-box-dropdown">
        <%= link_to contact, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <button type="button"><span class="glyphicon glyphicon-remove-circle"></span></button>
        <% end %>
    </div>
</div>
